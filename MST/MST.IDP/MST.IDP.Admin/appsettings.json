{
  "ConnectionStrings": {
    "ConfigurationDbConnection": "Server=localhost\\sqlcc;Database=MCB;Trusted_Connection=True;MultipleActiveResultSets=true",
    "PersistedGrantDbConnection": "Server=localhost\\sqlcc;Database=MCB;Trusted_Connection=True;MultipleActiveResultSets=true",
    "IdentityDbConnection": "Server=localhost\\sqlcc;Database=MCB;Trusted_Connection=True;MultipleActiveResultSets=true",
    "AdminLogDbConnection": "Server=localhost\\sqlcc;Database=MCB;Trusted_Connection=True;MultipleActiveResultSets=true"
  },
    "AdminConfiguration": {
        "IdentityAdminBaseUrl": "https://localhost:9000",
        "IdentityAdminRedirectUri": "https://localhost:9000/signin-oidc",
        "IdentityServerBaseUrl": "https://localhost:5001",
        "ClientId": "idpclient",
        "ClientSecret": "x",
        "OidcResponseType": "code id_token",
        "Scopes": [
            "openid",
            "profile",
            "email",
            "roles"
        ],
        "IdentityAdminApiSwaggerUIClientId": "idpclient_api_swaggerui",
        "IdentityAdminApiSwaggerUIRedirectUrl": "https://localhost:5001/swagger/oauth2-redirect.html",
        "IdentityAdminApiScope": "idpclient_api"
    },
    "Serilog": {
        "MinimumLevel": {
            "Default": "Error",
            "Override": {
                "Skoruba": "Information"
            }
        },
        "WriteTo": [
            {
                "Name": "File",
                "Args": {
                    "path": "Log\\mst_admin.txt",
                    "rollingInterval": "Day"
                }
            },
            {
                "Name": "MSSqlServer",
              "Args": {
                "connectionString": "Server=localhost\\sqlcc;Database=MCB;Trusted_Connection=True;MultipleActiveResultSets=true",
                "tableName": "Log",
                "columnOptionsSection": {
                  "addStandardColumns": [ "LogEvent" ],
                  "removeStandardColumns": [ "Properties" ]
                }
              }
            }
        ]
    }
}